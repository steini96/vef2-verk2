<%- include('header') -%>

<div class="content">
<div class = "appli-fyrirsogn">
  <p>Atvinnuumsókn</p>
</div>

<form method="post" action="/register">
  <div class= "uppl">
    <div class= "uppl-nafn">
      <label for="name">Nafn</label>
      <input type="text" name="nafn" value="<%= nafn %>">
    </div>
    <div class = "uppl-netfang">
      <label for="netfang">Netfang</label>
      <input type= "email" name="netfang" value = <% netfang%>>
    </div>
    <div class = "uppl-simi">
      <label for="simi">Sími</label>
      <input type= "tel" name="simi" value = <% simi%>>
    </div>
    <div class = "uppl-texti">
      <label for="texti">Kynning á þér:</label>
      <textarea rows="8" cols="80" type= "textarea" name="texti" value = <% texti%>></textarea>
    </div>
  </div>
  <strong>Starf sem sótt er um:</strong>
  <div class="uppl-starf">
    <div class="starf">
      <label for="starf"><input type="radio" name="starf" value="forritari">Forritar</label>
    </div>
    <div class="starf">
      <label for="starf"><input type="radio" name="starf" value="honnudur">Hönnuður</label>
    </div>
    <div class="starf">
      <label for="starf"><input type="radio" name="starf" value="verkefnastjori">Verkefnastjóri</label>
    </div>
  </div>

  <div class= "button">
    <button>Senda umsókn</button>
  </div>

</form>


<ul>
  <% errors.forEach((error) => { %>
    <li><%= error.msg %></li>
  <% }) %>
</ul>

</div>

<%- include('footer') -%>
